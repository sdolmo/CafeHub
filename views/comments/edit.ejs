<% include ../partials/header %>

<div class="new-edit-image">
  <div id="new-edit-form" class="new-edit-container">
    <div class="new-edit-box">
      <a class="new-edit-back-button" href="/cafes/<%= cafe_id %>">&larr; Go Back</a>
        <h1>Edit <br/> <%= comment.name %></h1>
        <form action="/cafes/<%= cafe_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="letters" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="button">Submit!</button>
        </div>
      </form>
      <div class="screen"></div>
    </div>
  </div>
</div>


