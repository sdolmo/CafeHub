<% include partials/header %>

<div class="auth-image">
  <div class="auth-box">
    <div class="auth-content">
      <h1>Sign Up</h1>
      <form action="/register" method="POST">
        <div class="form-group">
          <input class="letters" type="text" name="username" placeholder="Username">
        </div>
        <div class="form-group">
          <input class="letters" type="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
          <input class="button" type="submit" value="Submit">
        </div>
      </form>
    </div>
  </div>
</div>

